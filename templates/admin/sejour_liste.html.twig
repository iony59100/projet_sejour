{% extends 'base.html.twig' %}

{% block title %}Liste des Séjours{% endblock %}

{% block body %}
    <h1>Liste des Séjours</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date d'arrivée</th>
                <th>Date de sortie</th>
                <th>Patient</th>
                <th>Lit</th>
                <th>Action</th>
                
            </tr>
        </thead>
        <tbody>
            {% for sejour in sejours %}
                <tr>
                    <td>{{ sejour.id }}</td>
                    <td>{{ sejour.dateArrivee|date('d/m/Y') }}</td>
                    <td>
                        {% if sejour.dateSortie is not null %}
                            {{ sejour.dateSortie|date('d/m/Y') }}
                        {% else %}
                            Pas encore sorti
                        {% endif %}
                    </td>
                    <td>{{ sejour.patient.nom }}</td>
                    <td>{{ sejour.lit.id }}</td>
                    <td>
                        <a href="{{ path('modifiersejour', {'id': sejour.id}) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun séjour trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
