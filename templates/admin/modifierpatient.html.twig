{# templates/admin/modifierpatient.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le patient{% endblock %}

{% block body %}
    <h1>Modifier le patient</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Modifier le patient</button>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
