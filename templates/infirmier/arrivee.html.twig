{% extends 'base.html.twig' %}

{% block title %}Liste des Séjours{% endblock %}

{% block body %}
    <h1>Liste des Séjours</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date d'arrivée</th>
                <th>Patients</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for sejour in sejours %}
             {% if sejour.etat != 1 %}
                <tr>
                    <td>{{ sejour.id }}</td>
                    <td>{{ sejour.dateArrivee|date('d/m/Y') }}</td>
                    <td>{{ sejour.patient.nom }} {{ sejour.patient.prenom }}</td>
                    <td>
                        <a href="{{ path('informationsejour', {'id': sejour.id}) }}" class="btn btn-warning">Informations</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    
                </tr>
            {% endif %}
            {% endfor %}
            <a href="{{ path('prochain_sejour')}}" class="btn btn-warning">Consulter les sejours a venir</a>
        </tbody>
    </table>
{% endblock %}
